<UserControl x:Name="CommentRoot" x:Class="Hohoema.Views.CommentUI" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:Hohoema.Views.CommentRenderer" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">

  <Grid Visibility="{x:Bind IsVisible, Converter={StaticResource BooleanToVisibility}}">

    <TextBlock 
                Text="{x:Bind CommentText}"
                Foreground="{x:Bind BackTextColor, Converter={StaticResource ColorToBrush}}"
                Opacity="0.75"
                FontSize="{x:Bind CommentFontSize}"
                FontWeight="Medium"
                TextLineBounds="Tight"
            x:Name="BackgroundText"
            >
      <TextBlock.RenderTransform>
        <TranslateTransform X="{x:Bind TextBGOffsetX}" Y="{x:Bind TextBGOffsetY}" />
      </TextBlock.RenderTransform>
    </TextBlock>

    <TextBlock Text="{x:Bind CommentText}" Foreground="{x:Bind TextColor, Converter={StaticResource ColorToBrush}}" FontSize="{x:Bind CommentFontSize}" FontWeight="Medium" TextLineBounds="Tight" x:Name="ForegroundText" />

  </Grid>

</UserControl>
