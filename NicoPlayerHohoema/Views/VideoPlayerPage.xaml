                                                              />
                                </mybehavior:KeyboardTrigger.Actions>
                            </mybehavior:KeyboardTrigger>

                            <mybehavior:KeyboardTrigger Key="Left" x:Name="VideoPreviewKeyboardTrigger">
                                <mybehavior:KeyboardTrigger.Actions>
                                    <core:InvokeCommandAction Command="{Binding SeekVideoCommand}"
